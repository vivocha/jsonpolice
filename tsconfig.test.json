{
  "compilerOptions": {
    "incremental": true,
    "module": "NodeNext",
    "target": "ES2022",
    "noImplicitAny": false,
    "sourceMap": true,
    "declaration": false,
    "outDir": "test",
    "rootDir": "test",
    "strictNullChecks": true,
    "allowJs": false,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "NodeNext"
  },
  "include": ["test/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
